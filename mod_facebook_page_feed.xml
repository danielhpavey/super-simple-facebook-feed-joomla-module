<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="2.5"
	client="site">
	<name>Facebook Feed Module</name>
	<author>Daniel H Pavey</author>
	<creationDate>November 2011</creationDate>
	<copyright>East Devon IT</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>dan@eastdevon.it</authorEmail>
	<authorUrl>www.eastdevonit.co.uk</authorUrl>
	<version>0</version>
	<description></description>
	<files>
		<filename module="mod_facebook_page_feed">mod_facebook_page_feed.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_facebook_page_feed.xml</filename>
		<folder>tmpl</folder>
	</files>
	<languages>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="pageid"
					type="text"
					default=""
					size="10"
					label="Page Id"
					description="Define the Page ID" >
					</field>
				<field
					name="accesstoken"
					type="text"
					default=""
					size="50"
					label="Access Token"
					description="Access Token" >
					</field>
				<field
					name="feedlimit"
					type="text"
					default=""
					size="50"
					label="Feed Limit"
					description="Limit the number of facebook items to display" >
					</field>
					

			</fieldset>
		</fields>
	</config>
</extension>
